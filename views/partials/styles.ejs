<style>
  /* üåê GLOBAL STYLES */
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #fafafa;
    color: #333;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  input, textarea, select, button {
    font-family: inherit;
  }

  /* üß≠ TOP BAR */
  .top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #0077ff;
    color: white;
    padding: 10px 20px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  }

  .tabs {
    display: flex;
    gap: 20px;
  }

  .tab a, .tab {
    color: white;
    font-weight: 500;
    cursor: pointer;
    transition: color 0.3s;
  }

  .tab a:hover {
    color: #ffeb3b;
  }

  .logout a {
    background-color: white;
    color: #0077ff;
    padding: 6px 14px;
    border-radius: 5px;
    font-weight: 600;
    transition: background-color 0.3s;
  }

  .logout a:hover {
    background-color: #e6e6e6;
  }

  /* üìú BLOG LIST */
  .blog-card {
    background: white;
    border-radius: 8px;
    margin: 15px auto;
    padding: 20px;
    max-width: 700px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }

  .blog-title {
    font-size: 1.4rem;
    font-weight: 600;
    color: #222;
    margin-bottom: 8px;
  }

  .blog-body {
    font-size: 1rem;
    color: #555;
  }

  /* üìù FORMS */
  form {
    display: flex;
    flex-direction: column;
    gap: 12px;
    max-width: 500px;
    margin: 30px auto;
    padding: 25px;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  form input[type="text"],
  form input[type="email"],
  form input[type="password"],
  form textarea {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 1rem;
    width: 100%;
  }

  form input[type="submit"] {
    background-color: #0077ff;
    color: white;
    border: none;
    padding: 10px;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  form input[type="submit"]:hover {
    background-color: #005fd1;
  }

  /* ‚öôÔ∏è SORT & PAGINATION */
  .sort-section {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 20px 0;
    gap: 10px;
  }

  select {
    padding: 5px 10px;
    border-radius: 6px;
    border: 1px solid #ccc;
  }

  .pagination {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin: 25px 0;
  }

  .pagination a {
    padding: 6px 12px;
    background: #e0e0e0;
    border-radius: 5px;
    color: #333;
    transition: background-color 0.3s;
  }

  .pagination a:hover {
    background: #0077ff;
    color: white;
  }

  .activePage {
    background: #0077ff;
    color: white;
  }

  /* ‚úèÔ∏è MY BLOGS BUTTONS */
  .blog-actions {
    margin-top: 15px;
    display: flex;
    gap: 10px;
  }

  .edit-button,
  .delete-button {
    padding: 6px 12px;
    border-radius: 5px;
    color: white;
    font-weight: 600;
    transition: opacity 0.3s;
  }

  .edit-button {
    background-color: #0077ff;
  }

  .delete-button {
    background-color: #ff4747;
  }

  .edit-button:hover,
  .delete-button:hover {
    opacity: 0.8;
  }

  /* ‚ûï ADD BLOG LINK */
  .add-blog-link {
    display: block;
    width: fit-content;
    margin: 20px auto;
    padding: 10px 16px;
    background: #0077ff;
    color: white;
    border-radius: 8px;
    font-weight: 600;
    transition: background 0.3s;
  }

  .add-blog-link:hover {
    background: #005fd1;
  }

  /* üßç AUTH PAGES */
  h2 {
    text-align: center;
    margin-top: 40px;
  }

  p.message {
    text-align: center;
    color: red;
    font-weight: 500;
  }
</style>
